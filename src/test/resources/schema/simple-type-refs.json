{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "name":  { "$ref": "#/definitions/Name" },
    "breed": { "$ref": "#/definitions/Breed" },
    "age":  { "$ref": "#/definitions/Age" },
    "birthDate": { "$ref":  "#/definitions/Date" }
  },
  "definitions": {
    "Name": {
      "type": "string"
    },
    "Age": {
      "type": "integer",
      "minimum": 0
    },
    "Breed": {
      "type": "string",
      "enum": [ "LABRADOR", "BULLDOG", "YORKSHIRE"]
    },
    "Date": {
      "type": "string",
      "format": "date"
    }
  }
}
